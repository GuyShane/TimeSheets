<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, Jun 3"
        android:id="@+id/text_date"
        android:textSize="18sp"
        android:textColor="@color/text_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/text_dash"
        android:textSize="18sp"
        android:textColor="@color/text_title"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/text_date"
        android:layout_toEndOf="@+id/text_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/text_hours"
        android:textSize="18sp"
        android:textColor="@color/text_title"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/text_date"
        android:layout_toEndOf="@+id/text_dash"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hours"
        android:id="@+id/text_worked"
        android:textSize="18sp"
        android:textColor="@color/text_title"
        android:layout_alignTop="@+id/text_date"
        android:layout_toEndOf="@+id/text_hours"/>
</RelativeLayout>