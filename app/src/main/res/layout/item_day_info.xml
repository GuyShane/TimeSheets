<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_painter"
        android:textSize="18sp"
        android:textColor="@color/text_dark_gray"
        android:layout_marginTop="11dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_day_info_dash"
        android:id="@+id/text_dash"
        android:textSize="18sp"
        android:textColor="@color/text_dark_gray"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/text_painter"
        android:layout_toEndOf="@+id/text_painter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_hours"
        android:textSize="18sp"
        android:textColor="@color/text_dark_gray"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/text_painter"
        android:layout_toEndOf="@+id/text_dash"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_day_info_hours"
        android:id="@+id/text_worked"
        android:textSize="18sp"
        android:textColor="@color/text_dark_gray"
        android:layout_alignTop="@+id/text_painter"
        android:layout_toEndOf="@+id/text_hours"/>
</RelativeLayout>