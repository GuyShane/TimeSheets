<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job title"
        android:id="@+id/text_title"
        android:textColor="@color/text_title"
        android:textSize="21sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/text_address"
        android:textColor="@color/text_address"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_below="@+id/text_title"
        android:layout_alignStart="@+id/text_title"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date"
        android:id="@+id/text_start_date"
        android:layout_below="@+id/text_address"
        android:textSize="16sp"
        android:textColor="@color/text_date"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignStart="@+id/text_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End date"
        android:id="@+id/text_end_date"
        android:textSize="16sp"
        android:textColor="@color/text_date"
        android:visibility="gone"
        android:layout_below="@+id/text_start_date"
        android:layout_alignStart="@+id/text_start_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/text_cost"
        android:textColor="@color/text_cost"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>